<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:tizen="http://tizen.org/ns/widgets"
        id="com.example.configrestorer"
        version="1.0.0"
        viewmodes="fullscreen">

  <content src="index.html"/>
  <name>ConfigRestorer</name>
  <description>Restaurador silencioso de configuraci√≥n de red y hora</description>
  <icon src="icon.png"/>

<tizen:application id="configrestorer.app"
                   package="configrestorer"
                   required_version="2.4"/>


  <tizen:profile name="tv"/>

  <tizen:setting
        screen-orientation="landscape"
        context-menu="disable"
        background-support="enable"
        encryption="disable"
        install-location="internal-only"
        hwkey-event="enable"/>

  <tizen:privilege name="http://tizen.org/privilege/internet"/>
  <tizen:privilege name="http://tizen.org/privilege/application.launch"/>
</widget>
